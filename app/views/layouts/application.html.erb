<!DOCTYPE html>
<html>
<head>
  <title>MOB PUC - Mobilize-se!</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body> 

  <div id="sign_in_out" align="right">
    <p id="buttonSignI_O" class="btn btn-primary btn-lg">
      <% if signed_in? %>
              <%= link_to "Sair", signout_path, id: "sign_out" %></p>
      <% else %>
              <%= link_to "Entre com o Facebook", "/auth/facebook", id: "sign_in" %>
      <% end %>
    </p>
  </div>


  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Mob PUC</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <!-- <li class="active"><a href="#">Crie <span class="sr-only">(current)</span></a></li> -->
          <% if signed_in? %>
            <li><%= link_to "Crie a sua mobilização" , mobilizationnew_path %></li>
          <%end%>

          <li><a href="#">Regras de conduta</a></li>
          <li><%= link_to "Sobre", sobre_path%></li>
        </ul>
        
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li><%= link_to "Perfil" , current_user %></li>
          <% end %>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Procurar mob">
            </div>
            <button type="submit" class="btn btn-default">=></button>
          </form>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <%= yield %>

</body>
</html>

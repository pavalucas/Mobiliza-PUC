<%= form_for(@mobilization) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :title, "Título"%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Categoria" %><br>
    <%= f.select(:category, options_for_select([[$categories[0], 0], [$categories[1], 1], 
    [$categories[2], 2], [$categories[3], 3]])) %>
  </div>
  <div class="field">
    <%= f.label "Status" %><br>
    <%= f.select(:status, options_for_select([[$statuses[0], 0], [$statuses[1], 1], 
    [$statuses[2], 2], [$statuses[3], 3]])) %>
  </div>

  <div class="field">
    <%= f.label :description, "Descrição" %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :goal, "Meta" %><br>
    <%= f.number_field :goal %>
  </div>

  <div class = "field">
    <%= f.label "Alvos" %><br>
    <%= f.collection_select(:target_ids, Target.all, :id, :name, {}, {:multiple => true} ) %>
  </div>
  
  <div class="field">
    <%= f.label :mail_content %><br>
    <%= f.text_area :mail_content %>
  </div>
  <div class="actions">
    <%= f.submit "Criar", class: "btn btn-lg btn-primary2"%>
  </div>
<% end %>
